@model Expense_Tracker.Models.Category

@{
	ViewData["PageTitle"] = Model.Id == 0 ? "Create a new category" : "Edit category";
}
<hr />
<div class="row">
	<div class="col-md-7 m-auto">
		<div class="Widget p-5">
			<form asp-action="AddOrEdit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" name="Id" value="@Model.Id" />
			<div>
				<div class="e-btn-group m-3 custom-R-btn">
					<input type="radio" id="radioleft" name="Type" value="Expense" checked />
					<label class="e-btn" for="radioleft">Expense</label>
					<input type="radio" id="radiomiddle" name="Type" value="Income" />
					<label class="e-btn" for="radiomiddle">Income</label>
				</div>
			</div>

			<div class="form-group mb-2">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger fs-6"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="Icon" class="control-label"></label>
				<input asp-for="Icon" class="form-control" />
				<span asp-validation-for="Icon" class="text-danger"></span>
			</div>
			<br/>
			<div class="form-group mt-3">
				<input type="submit" value="Confirm" class="btn btn-success" />
			</div>
		</form>
		</div>

	</div>
</div>



